<idea-plugin>
    <id>com.smyachenkov.jsonpatchplugin</id>
    <name>JSON Patch</name>
    <description>
        This plugin allows you to apply JSON Patch to json documents in your project.
        For more information about notation see https://tools.ietf.org/html/rfc6902.
    </description>
    <change-notes>
        Initial release of the JSON Patch plugin.
    </change-notes>
    <version>1.0.0</version>
    <vendor
            email="s.myachenkov@gmail.com"
            url="https://www.smyachenkov.com"
    >
        Stanislav Myachenkov
    </vendor>
    <depends>com.intellij.modules.platform</depends>
    <idea-version since-build="202" until-build="211.*"/>
    <extensions defaultExtensionNs="com.intellij"/>

    <actions>
        <action
                id="JsonPatchAction"
                class="JsonPatchAction"
                text="Json Patch"
                description="Apply Json Patch to file"
        >
            <add-to-group group-id="EditorPopupMenu" anchor="last"/>
        </action>
    </actions>
</idea-plugin>
